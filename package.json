{
  "name": "react-native-boilerplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "android": "npx react-native run-android",
    "ios": "npx react-native run-ios --simulator='iPhone X' ",
    "device": "react-native run-ios --device",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "bundle-ios": "npx react-native bundle --entry-file index.js --platform ios --dev false --bundle-output ios/main.jsbundle --assets-dest ios"
  },
  "dependencies": {
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/drawer": "^5.9.0",
    "@react-navigation/native": "^5.7.3",
    "@react-navigation/stack": "^5.9.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "chalk": "^4.1.0",
    "formik": "^2.1.5",
    "husky": "^4.3.0",
    "i18n-js": "^3.7.1",
    "lint-staged": "^10.4.0",
    "lodash": "^4.17.20",
    "react": "16.13.1",
    "react-native": "0.63.2",
    "react-native-gesture-handler": "^1.8.0",
    "react-native-reanimated": "^1.13.0",
    "react-native-safe-area-context": "^3.1.8",
    "react-native-screens": "^2.11.0",
    "react-native-splash-screen": "^3.2.0",
    "react-navigation": "^4.4.0",
    "react-redux": "^7.2.1",
    "reactotron-react-native": "^5.0.0",
    "reactotron-redux": "^3.1.3",
    "redux": "^4.0.5",
    "redux-observable": "^1.2.0",
    "redux-toolbelt": "^3.0.1",
    "redux-toolbelt-observable": "^3.0.1",
    "seamless-immutable": "^7.1.4",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/runtime": "^7.11.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "babel-jest": "^26.3.0",
    "eslint": "^7.9.0",
    "flow-bin": "^0.133.0",
    "flow-typed": "^3.2.1",
    "jest": "^26.4.2",
    "metro-react-native-babel-preset": "^0.63.0",
    "react-test-renderer": "16.13.1"
  },
  "jest": {
    "preset": "react-native"
  },
  "lint-staged": {
    "*.{js, jsx}": [
      "node_modules/.bin/eslint --max-warnings=30",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  }
}